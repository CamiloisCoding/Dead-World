modules = ["python-3.12"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["SDL2", "SDL2_image", "SDL2_mixer", "SDL2_ttf", "fontconfig", "freetype", "libjpeg", "libpng", "pkg-config", "portmidi", "xorg.libX11", "xorg.libXext", "xorg.libXrender", "xorg.libXcursor", "xorg.libXi", "xorg.libXrandr", "xorg.libXfixes", "xorg.libXinerama", "xorg.libXxf86vm", "libGL"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dead World Game"

[[workflows.workflow]]
name = "Dead World Game"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python dead_world_intro_v_omega.py"

[workflows.workflow.metadata]
outputType = "vnc"

[deployment]
deploymentTarget = "vm"
run = ["python", "dead_world_intro_v_omega.py"]
